{% if is_granted('ROLE_ADMIN') %}
    {% extends 'admin/base.html.twig' %}
{% endif %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 bg-light p-3">
                <h1>Connexion</h1>
                {% if hasError %}
                    <div class="alert alert-danger">
                        L'adresse email ou le mot de passe est invalide
                    </div>
                {% endif %}
                {% if loginError %}
                    <div class="alert alert-danger">
                        {{ loginError }}
                    </div>
                {% endif %}
                <form action="{{ path('app_login') }}" method="POST">
                    <div class="form-group my-2">
                        <label for="email">E-mail</label>
                        <input type="text" name="_username" id="email" class="form-control"
                               placeholder="Adresse email" required value="{{ username }}">
                    </div>
                    <div class="form-group my-2">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control"
                               placeholder="Votre mot de passe" required>
                    </div>
                    <div class="form-group my-2">
                        <button type="submit" class="btn btn-success my-3">Connexion</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
{% endblock %}