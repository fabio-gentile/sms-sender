{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="row mw-100">
    <div class="col-md-6 d-md-block d-none bg-light auth__backdrop gx-0"></div>
    <div class="col-md-6 d-grid align-items-center">
        <div class="bg-light container my-4">
            <h5 class="fw-bold">Créer un compte</h5>
            <div class="d-grid gap-3 bg-white rounded p-3 mt-4">
                {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm) }}
                <button type="submit" class="btn btn-primary w-100 mt-3">Créer un compte</button>
                <p class="mt-3 text-center">OU</p>
                <a role="button" href="{{ path('app_login') }}" class="btn btn-secondary w-100">Se connecter</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}