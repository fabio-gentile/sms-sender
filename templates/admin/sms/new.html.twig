{% extends 'admin/base.html.twig' %}

{% block title %}Envoyer un SMS{% endblock %}

{% block body %}
    <h1 class="h-2 mb-3">{{ block('title') }}</h1>
    {{ form_start(newForm) }}
    {{ form_widget(newForm) }}
    <div class="d-flex gap-3 flex-wrap mt-3">
        <button id="btnSubmitModal" disabled type="button" class="btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#submitModal">
            Envoyer un sms
        </button>
        <button id="btnPreviewModal" disabled type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#previewModal">
            Prévisualiser
        </button>
    </div>

    <!-- Preview Modal -->
    <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Prévisualisation du SMS</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body preview" style="white-space: pre-wrap">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Submit Modal -->
    <div class="modal fade" id="submitModal" tabindex="-1" aria-labelledby="submitModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmer l’envoi du SMS</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body send">
                    Êtes-vous sûr de vouloir envoyer le sms ?
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeModalSubmit" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="modalSubmit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(newForm) }}
{% endblock %}